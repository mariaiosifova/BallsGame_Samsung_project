<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_lar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/android_lar"
    >

    <View
        android:id="@+id/second_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/photo_2023"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/rectangle_17"
        android:layout_width="217dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_17"
        android:elevation="3dp"
        android:onClick="l"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_19"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_19"
        app:layout_constraintStart_toStartOf="@+id/rectangle_19"
        app:layout_constraintTop_toTopOf="@+id/rectangle_19"
        app:layout_constraintVertical_bias="0.096" />

    <View
        android:id="@+id/rectangle_18"
        android:layout_width="217dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_18"
        android:elevation="3dp"
        android:onClick="r"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_19"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_19"
        app:layout_constraintStart_toStartOf="@+id/rectangle_19"
        app:layout_constraintTop_toTopOf="@+id/rectangle_19"
        app:layout_constraintVertical_bias="0.898" />

    <View
        android:id="@+id/rectangle_19"
        android:layout_width="249dp"
        android:layout_height="307dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/choose_play"
        android:layout_width="263dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:text="@string/choose_play"
        android:textAppearance="@style/choose_play"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

</androidx.constraintlayout.widget.ConstraintLayout>